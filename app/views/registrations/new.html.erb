<div class="span7 offset1  well well-large">
<div class="span12">	
<font size="6px">Join us and start your first ride now!</font><br/>
<font size="4px">Simply ride, Simply fun</font><br/><br/>
<div class="span7" style="margin-left:0;padding-right:12px">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="controls">
      <%= f.email_field :email, :autofocus => true, :placeholder =>"Your Email", :class =>"span12" %><br/>
</div>
<div class="controls controls-row"><%= f.file_field :avatar %>
      <%= f.text_field :first_name, :placeholder =>"First Name", :class =>"span6" %>
      <%= f.text_field :last_name, :placeholder =>"Last Name", :class =>"span6" %><br/>
      <% if f.object.password_required?%>
		  <%= f.password_field :password, :placeholder =>"New Password", :class =>"span12" %><br/>
		  <%= f.password_field :password_confirmation, :placeholder =>"Re-enter Password", :class =>"span12" %><br/>
	  <% end %>
</div>
<%= f.submit "Sign up", :class =>"btn btn-block btn-info" %>
</div>
<div class="well span5" style="background:white;">
 <%= link_to image_tag("signup-fb.png", :alt => "Sign Up with Facebook"), user_omniauth_authorize_path(:facebook) %><br/><br/>
 <%= link_to image_tag("signup-tw.png", :alt => "Sign In with Twitter"), user_omniauth_authorize_path(:twitter) %><br/><br/>
 <p style="font-size:11px;text-align:justify;">One-click easy signup with Facebook or Twitter & automatically find your ride!</p>
</div>
</div>

</div>
<% end %>




